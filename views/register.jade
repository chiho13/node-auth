extends base

block vars
  - var title = 'Register'

block body
  h1.container.center Create an Account

  if error
    p ERROR: #{error}

  form.justify(method="post")
    input(type="hidden", name="_csrf", value=csrfToken)
    
    span First Name:
    input.form-control(type="text", name="firstName", required=true)
    br

    span Last Name:
    input.form-control(type="text", name="lastName", required=true)
    br

    span Email:
    input.form-control(type="email", name="email", required=true)
    br

    span Password:
    input.form-control(type="password", name="password", required=true)
    br

    input.btn(type="submit")
