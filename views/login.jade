extends base

block vars
  - var title = 'Login'
block body
  div.container
    h1.center.main-title Log Into Your Account

    if error
      div.alert.alert-danger
        p ERROR: #{error}
    
    form(method="post")
      input(type="hidden", name="_csrf", value=csrfToken)
      span Email:
      input.form-control(type="email", name="email", required=true)
      br

      span Password:
      input.form-control(type="password", name="password", required=true)
      br

      input.btn(type="submit")
